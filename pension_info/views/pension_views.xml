<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_pension_form" model="ir.ui.view">
        <field name="name">res.partner.pension.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="g2p_registry_individual.view_individuals_form" />
        <field name="arch" type="xml">
            <!-- Insert Relatives tab after Personal Info (basic_info page) -->
            <xpath  expr="//page[@name='payment_mode']" position="after">
                <page string="Pension Information" name="pension_info">
                    <group col="2">
                        <group>
                            <field name="other_pension" />
                            <field name="scheme_name"
                                invisible="other_pension != 'yes'" />
                        </group>

                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>